<h1>Utilisateurs</h1>

<table>
  <thead>
    <tr>
      <th>Email</th>
      <th>Rôle</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.role %></td>
        <td>
          <%= link_to 'Voir', [:admin, user] %>
          <%= link_to 'Éditer', edit_admin_user_path(user) %>
          <%= link_to 'Supprimer', admin_user_path(user), method: :delete, data: { confirm: 'Êtes-vous sûr de vouloir supprimer cet utilisateur ?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
